{
    "manifest_version": 3,
    "name": "Scraper",
    "description": "simple scraper",
    "version": "1.0",
    "host_permissions": ["<all_urls>"],
    "permissions": [
        "sidePanel", 
        "scripting", 
        "tabs"
    ],
    
    "action": {
        "default_popup": "popup.html"
    },
    
    "side_panel": {
        "default_path": "popup.html"  
    },
    
    "content_scripts":[
        {
        "js":["scripts/content.js"],
        "matches": ["<all_urls>"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["content.js"],
            "matches": ["<all_urls>"]
        }
    ]
    
  }
  